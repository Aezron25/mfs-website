
{
  "entities": {
    "userProfile": {
      "title": "User Profile",
      "description": "Represents a user's profile information.",
      "type": "object",
      "properties": {
        "uid": {
          "type": "string",
          "description": "The user's unique ID from Firebase Authentication."
        },
        "name": {
          "type": "string",
          "description": "The user's full name."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "role": {
          "type": "string",
          "description": "The user's role in the system.",
          "enum": ["admin", "staff", "client"]
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the user was created."
        },
        "active": {
          "type": "boolean",
          "description": "Whether the user account is active."
        }
      },
      "required": ["uid", "name", "email", "role"]
    },
    "client": {
      "title": "Client",
      "description": "Represents a client of the financial firm.",
      "type": "object",
      "properties": {
        "fullName": {
          "type": "string"
        },
        "email": {
          "type": "string",
          "format": "email"
        },
        "phone": {
          "type": "string"
        },
        "services": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": ["fullName", "email"]
    },
    "serviceRequest": {
      "title": "Service Request",
      "description": "A request for a financial service from a client.",
      "type": "object",
      "properties": {
        "clientId": {
          "$ref": "#/entities/userProfile"
        },
        "serviceType": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "status": {
          "type": "string",
          "enum": ["pending", "in-progress", "completed", "cancelled"]
        },
        "assignedStaff": {
          "$ref": "#/entities/userProfile"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": ["clientId", "serviceType", "status"]
    },
    "appointment": {
      "title": "Appointment",
      "description": "A scheduled appointment with a client.",
      "type": "object",
      "properties": {
        "clientId": {
          "$ref": "#/entities/userProfile"
        },
        "date": {
          "type": "string",
          "format": "date"
        },
        "time": {
          "type": "string",
          "format": "time"
        },
        "serviceType": {
          "type": "string"
        },
        "status": {
          "type": "string",
          "enum": ["confirmed", "pending", "cancelled"]
        }
      },
      "required": ["clientId", "date", "time", "status"]
    },
    "document": {
      "title": "Document",
      "description": "Metadata for a document uploaded by a user.",
      "type": "object",
      "properties": {
        "ownerId": {
          "$ref": "#/entities/userProfile"
        },
        "fileName": {
          "type": "string"
        },
        "storagePath": {
          "type": "string"
        },
        "uploadedAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": ["ownerId", "fileName", "storagePath"]
    },
    "message": {
      "title": "Message",
      "description": "A message sent between users.",
      "type": "object",
      "properties": {
        "senderId": {
          "$ref": "#/entities/userProfile"
        },
        "receiverId": {
          "$ref": "#/entities/userProfile"
        },
        "content": {
          "type": "string"
        },
        "timestamp": {
          "type": "string",
          "format": "date-time"
        },
        "isRead": {
          "type": "boolean"
        }
      },
      "required": ["senderId", "receiverId", "content", "timestamp"]
    }
  },
  "auth": {
    "providers": ["email-password"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/userProfile"
      },
      "description": "Stores public profiles for all users."
    },
    "/clients/{clientId}": {
      "schema": {
        "$ref": "#/entities/client"
      },
      "description": "Stores detailed information about clients."
    },
    "/serviceRequests/{requestId}": {
      "schema": {
        "$ref": "#/entities/serviceRequest"
      },
      "description": "Tracks all service requests from clients."
    },
    "/appointments/{appointmentId}": {
      "schema": {
        "$ref": "#/entities/appointment"
      },
      "description": "Manages all scheduled appointments."
    },
    "/documents/{docId}": {
      "schema": {
        "$ref": "#/entities/document"
      },
      "description": "Stores metadata for uploaded documents."
    },
    "/messages/{messageId}": {
      "schema": {
        "$ref": "#/entities/message"
      },
      "description": "Stores chat messages between users."
    }
  }
}
