rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    function isAdmin() {
      return exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    // Rule for the entire client_profiles collection
    match /client_profiles/{document=**} {
      allow read, write: if isAdmin();
    }

    // Rules for individual client profiles
    match /client_profiles/{clientProfileId} {
      allow get, update, delete: if request.auth.uid == clientProfileId;
      allow create: if request.auth.uid == clientProfileId;

      // Rules for messages subcollection
      match /messages/{messageId} {
        allow read, write: if request.auth.uid == clientProfileId;
      }
    }
    
    // Admins should be managed from the console for security
    match /roles_admin/{adminId} {
      allow read, write: if false;
    }
  }
}
