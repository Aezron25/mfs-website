
/**
 * Firestore Security Rules for Mwanakombo Financial Services
 *
 * Core Philosophy:
 * This ruleset enforces a strict, participant-based security model. Data access is not granted based on broad roles like 'client' or 'expert' alone, but is instead determined by whether a user's UID is explicitly listed as a participant (e.g., as a 'clientId' or 'expertId') on the specific document they are trying to access. User data is strictly private and isolated, with the exception of admins who can list all users.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      // An admin is a signed-in user whose document in the 'users' collection has the 'roles_admin' role.
      return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'roles_admin';
    }

    function isExistingDoc() {
      return resource != null;
    }

    function isParticipant(conversationId) {
      return isSignedIn()
        && request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants;
    }

    match /users/{userId} {
      allow get: if isOwner(userId) || isAdmin();
      allow list: if isAdmin();
      allow create: if isOwner(userId) && request.resource.data.role == 'user';
      allow update: if isOwner(userId) && isExistingDoc() && request.resource.data.role == resource.data.role;
      allow delete: if isOwner(userId) && isExistingDoc();
    }

    match /appointments/{appointmentId} {
      allow create: if request.auth != null && request.auth.uid == request.resource.data.clientId;
      allow read: if request.auth != null && (request.auth.uid == resource.data.clientId || request.auth.uid == resource.data.expertId);
      allow update: if request.auth != null && (request.auth.uid == resource.data.clientId || request.auth.uid == resource.data.expertId);
      allow delete: if false;
      allow list: if false; 
    }

    match /conversations/{conversationId} {
      // Allow a user to list only the conversations they are a participant in (enforced by the client query).
      allow list: if isSignedIn() && (request.query.where.participants.hasAny([request.auth.uid]) || isAdmin());
      // Allow a user to get a specific conversation document only if they are a participant.
      allow get: if isParticipant(conversationId) || isAdmin();
      // Allow a user to create a conversation if they are one of the participants.
      allow create: if isSignedIn() && request.auth.uid in request.resource.data.participants;
      // Allow a user to update a conversation (e.g., lastMessage) if they are a participant.
      allow update: if isParticipant(conversationId) || isAdmin();
      allow delete: if isParticipant(conversationId) && isExistingDoc();
    }

    match /conversations/{conversationId}/messages/{messageId} {
      // Allow reading/listing messages only if the user is a participant of the parent conversation.
      allow read, list: if isParticipant(conversationId) || isAdmin();
      // Allow creating a message if the user is a participant and the senderId matches their own UID.
      allow create: if (isParticipant(conversationId) || isAdmin()) && request.resource.data.senderId == request.auth.uid;
      // Messages are immutable; they cannot be updated or deleted.
      allow update, delete: if false;
    }

    match /serviceRequests/{requestId} {
      allow create: if request.auth != null && request.auth.uid == request.resource.data.clientId;
      allow read: if request.auth != null && (request.auth.uid == resource.data.clientId || request.auth.uid == resource.data.expertId) || isAdmin();
      allow update: if request.auth != null && (request.auth.uid == resource.data.clientId || request.auth.uid == resource.data.expertId) || isAdmin();
      allow delete: if false;
      allow list: if (isSignedIn() && request.query.where.clientId == request.auth.uid) || isAdmin();
    }
  }
}
