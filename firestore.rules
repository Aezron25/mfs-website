
/**
 * Firestore Security Rules for Mwanakombo Financial Services
 *
 * Core Philosophy:
 * This ruleset enforces a strict, participant-based security model. Data access is not granted based on broad roles like 'client' or 'expert' alone, but is instead determined by whether a user's UID is explicitly listed as a participant (e.g., as a 'clientId' or 'expertId') on the specific document they are trying to access. User data is strictly private and isolated.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isExistingDoc() {
      return resource != null;
    }

    function isParticipant(docData) {
      return isSignedIn() && (request.auth.uid == docData.clientId || request.auth.uid == docData.expertId);
    }

    function isConversationParticipant(conversationId) {
      let conversation = get(/databases/$(database)/documents/conversations/$(conversationId)).data;
      return isParticipant(conversation);
    }

    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isOwner(userId) && request.resource.data.role == 'client';
      allow update: if isOwner(userId) && isExistingDoc() && request.resource.data.role == resource.data.role;
      allow delete: if isOwner(userId) && isExistingDoc();
    }

    match /appointments/{appointmentId} {
      allow list: if false; // Explicitly deny listing the entire collection
      allow create: if isSignedIn() && request.resource.data.clientId == request.auth.uid;
      allow read, update: if isSignedIn() && (
        resource.data.clientId == request.auth.uid || 
        resource.data.expertId == request.auth.uid
      );
      allow delete: if false; // Prevent clients from deleting appointments
    }

    match /conversations/{conversationId} {
      allow list: if false;
      allow get: if isParticipant(resource.data);
      allow create: if isOwner(request.resource.data.clientId);
      allow update: if isParticipant(resource.data) && isExistingDoc();
      allow delete: if isParticipant(resource.data) && isExistingDoc();
    }

    match /messages/{messageId} {
      allow list: if false;
      allow get: if isConversationParticipant(resource.data.conversationId);
      allow create: if isConversationParticipant(request.resource.data.conversationId) && isOwner(request.resource.data.senderId);
      allow update: if isOwner(resource.data.senderId) && isExistingDoc();
      allow delete: if isOwner(resource.data.senderId) && isExistingDoc();
    }
  }
}
