rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAuth() {
      return request.auth != null;
    }

    match /client_profiles/{clientProfileId} {
      // Any authenticated user can list the collection.
      allow list: if isAuth();

      // Only the owner of a profile can get, create, update, or delete it.
      allow get, update, delete: if request.auth.uid == clientProfileId;
      allow create: if request.auth.uid == clientProfileId && request.resource.data.id == clientProfileId;
    }

    match /client_profiles/{clientProfileId}/messages/{messageId} {
      // A user can only access messages within their own profile.
      allow read, write: if request.auth.uid == clientProfileId;
    }

    match /roles_admin/{adminProfileId} {
      // Only authenticated users can read the admin roles collection (e.g., to check their own role).
      // Writes should be handled server-side or via the Firebase Console for security.
      allow read: if isAuth();
    }
  }
}
