rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    function isAdmin() {
      // Check if the user's UID exists in the admin roles collection
      return exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    // Rules for the client_profiles collection
    match /client_profiles/{clientProfileId} {
      // Allow anyone to read data from this collection
      allow read: if true;
      
      // Only the authenticated owner can write to their own profile
      allow write: if request.auth != null && request.auth.uid == clientProfileId;
    }

    // Rules for messages subcollection
    match /client_profiles/{clientProfileId}/messages/{messageId} {
      // Only the authenticated owner can manage their own messages
      allow read, write, delete: if request.auth != null && request.auth.uid == clientProfileId;
    }

    // Rules for admin roles
    match /roles_admin/{adminId} {
      // Only existing admins can read the list of admins
      allow get: if isAdmin();
    }
  }
}
